{
  "name": "doon",
  "version": "1.0.0",
  "description": "An Electron application with React and TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "stylelint": "stylelint 'src/**/*.{css,scss}' --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build:main": "tsc -p src/main/tsconfig.main.json",
    "build:renderer": "tsc -p src/renderer/tsconfig.renderer.json",
    "build:web": "tsc -p tsconfig.web.json",
    "build": "npm run build:main && npm run build:renderer && npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "clean": "npm-run-all clean:dist clean:build",
    "clean:dist": "rimraf dist",
    "clean:build": "rimraf build",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@formkit/tempo": "^0.1.1",
    "@mdxeditor/editor": "^3.4.0",
    "clsx": "^2.1.1",
    "electron-log": "^5.1.4",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-updater": "^6.1.7",
    "fs-extra": "^8.1.0",
    "jotai": "^2.8.0",
    "react-icons": "^5.0.1",
    "react-markdown": "^9.0.1",
    "reflect-metadata": "^0.2.2",
    "rehype-highlight": "^7.0.0",
    "rehype-katex": "^7.0.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "rimraf": "^3.0.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@tsconfig/node16": "^16.1.1",
    "@types/node": "^18.19.42",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-devtools-installer": "^3.2.0",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.72.0",
    "stylelint": "^16.3.1",
    "stylelint-config-recess-order": "^5.0.0",
    "stylelint-config-recommended-scss": "^14.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  }
}
